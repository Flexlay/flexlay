<!--
This file contains informations about the tile collision, tile
groups and other tile informations which a simple .png file can't hold
-->

<turrican-metatiles>
  <tile>
    <!-- Name refers to the turrican.scr
    file and not to the filename -->
    <name>images/tile2</name>

    <!-- The tile is subdiveded into 4x4 smaller areas which are used
    for collision detection, newlines and spaces get trimmed, the
    string can contain 0,1 - rest is reserved for future use -->
    <collision>
      0000
      1111
      1111
      1111
    </collision>
  </tile>

  <tile>
    <name>images/tile2.png</name>
    <collision>
      0000
      1111
      1111
      1111
    </collision>
  </tile>

  <tile>
    <name>images/tile2.png</name>
